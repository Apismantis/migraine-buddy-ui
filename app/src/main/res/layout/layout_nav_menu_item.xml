<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnMenuItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorNavBack"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin_8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_8dp">

    <ImageView
        android:id="@+id/imvIcon"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/icn_export_normal" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="@color/colorEditTextColor"
        android:textSize="14sp" />

</LinearLayout>
