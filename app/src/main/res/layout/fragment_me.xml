<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blueeagle.migrainebuddyui.Fragment.MeFragment">

    <TextView
        android:id="@+id/tvAbcdef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="You having a migraine for 24 days"
        android:textColor="@color/colorEditTextColor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tvAbcdef"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/round_back"
        android:gravity="center"
        android:text="Get better soon!"
        android:textColor="@color/colorPrimaryButtonPressed2"
        android:textSize="@dimen/text_size_h2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEditRunning"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/lnBottom"
        android:background="@drawable/btn_primary_orange"
        android:drawablePadding="@dimen/activity_vertical_margin_8dp"
        android:drawableRight="@drawable/ic_notification_migraine"
        android:gravity="right|center"
        android:paddingRight="100dp"
        android:text="Edit running migraine"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/lnBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDailyTracker"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_primary_back_inactive"
            android:drawablePadding="@dimen/activity_vertical_margin_4dp"
            android:drawableTop="@drawable/trigger_inspector"
            android:paddingBottom="@dimen/activity_vertical_margin_8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin_8dp"
            android:text="Daily\nTracker"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnMyRecord"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_primary_back_inactive"
            android:drawablePadding="@dimen/activity_vertical_margin_4dp"
            android:drawableTop="@drawable/ic_my_records"
            android:paddingBottom="@dimen/activity_vertical_margin_8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin_8dp"
            android:text="My\nRecord"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnMyCalender"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_primary_back_inactive"
            android:drawablePadding="@dimen/activity_vertical_margin_4dp"
            android:drawableTop="@drawable/icn_migraine_calendar"
            android:paddingBottom="@dimen/activity_vertical_margin_8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin_8dp"
            android:text="My\nCalendar"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
